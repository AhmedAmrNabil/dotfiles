#!/usr/bin/env bash

# iDIR="$HOME/.config/mako/icons"

# Get brightness
get_backlight() {
	ddcutil --async --sleep-multiplier .5 getvcp 10 | grep -Po '\d*,' | grep -Eo '[0-9]' | tr -d '\n'
}

toggle(){
	brightness="$(ddcutil getvcp 10 | grep -Po '\d*,' | grep -Eo '[0-9]' | tr -d '\n')"
	if [ "$brightness" -gt "0"]; 
	then
		ddcutil --display 1 setvcp 10 0
	else
		ddcutil --display 1 setvcp 10 100
	fi;

}

