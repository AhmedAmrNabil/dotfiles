# # Notify
# notify_user() {
# 	notify-send -h string:x-canonical-private-synchronous:sys-notify -u low -i "$icon" "Brightness : $(ddcutil getvcp 10 | grep -Po '\d*,' | grep -Eo '[0-9]' | tr -d '\n')"
# }

# Increase brightness
inc_backlight() {
	ddcutil --display 1 setvcp 10 + 5
	sleep 1s
}

# Decrease brightness
dec_backlight() {
	ddcutil --display 1 setvcp 10 - 5
	sleep 1s
}

# Execute accordingly
if [[ "$1" == "--get" ]]; then
	get_backlight
elif [[ "$1" == "--inc" ]]; then
	inc_backlight
elif [[ "$1" == "--dec" ]]; then
	dec_backlight
elif [[ "$1" == "--toggle" ]]; then
	toggle
else
	get_backlight
fi